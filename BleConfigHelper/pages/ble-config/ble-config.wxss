/* pages/ble-config/ble-config.wxss */
.container {
  padding: 32rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 通用标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

/* 设备列表样式 */
.scan-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.device-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1px solid #eee;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.device-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.device-id {
  font-size: 24rpx;
  color: #999;
}

.device-rssi {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

.no-devices {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 配网表单样式 */
.config-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-item {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.password-input {
  position: relative;
  display: flex;
  align-items: center;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 16rpx;
}

.eye-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 状态显示样式 */
.status-section {
  text-align: center;
  margin: 32rpx 0;
}

.status-text {
  font-size: 28rpx;
  color: #333;
}

.status-text.error {
  color: #ff4d4f;
}

/* 按钮样式 */
.button-group {
  margin-top: 48rpx;
}

.refresh-btn,
.submit-btn,
.disconnect-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-btn {
  background: #fff;
  color: #333;
  border: 1px solid #ddd;
}

.submit-btn {
  background: #1aad19;
  color: #fff;
}

.disconnect-btn {
  background: #ff4d4f;
  color: #fff;
}

.submit-btn[disabled],
.disconnect-btn[disabled] {
  opacity: 0.6;
}